{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://aiidalab.github.io/aiidalab-registry/schemas/v1/apps.schema.json",
    "$ref": "#/definitions/Apps",
    "definitions": {
        "App": {
            "type": "object",
            "properties": {
                "categories": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "git_url": {
                    "type": "string",
                    "format": "uri",
                    "qt-uri-extensions": [
                        ".git"
                    ],
                    "qt-uri-protocols": [
                        "https"
                    ]
                },
                "logo": {
                    "type": "string",
                    "format": "uri"
                },
                "metadata": {
                    "$ref": "https://aiidalab.github.io/aiidalab-registry/schemas/v1/metadata.schema.json#/definitions/Welcome"
                }
            },
            "additionalProperties": false,
            "required": [
                "git_url",
                "metadata"
            ],
            "title": "AiiDAlab apps registry app entry"
        },
        "Apps": {
            "type": "object",
            "additionalProperties": false,
            "patternProperties": {
                ".*": {
                    "$ref": "#/definitions/App"
                }
            },
            "propertyNames": {
                "pattern": "^[A-Za-z][A-Za-z0-9-_]*$"
            },
            "title": "Schema for the AiiDAlab apps registry."
        }
    }
}
