{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/aiidalab/aiidalab-registry/master/src/static/schemas/v1/apps.schema.json",
    "$ref": "#/definitions/Apps",
    "definitions": {
        "App": {
            "type": "object",
            "properties": {
                "categories": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "logo": {
                    "type": "string",
                    "format": "uri"
                },
                "metadata": {
                    "$ref": "metadata.schema.json#/definitions/Welcome"
                },
                "releases": {
                    "$ref": "#definitions/ReleaseSpecifications"
                }
            },
            "additionalProperties": false,
            "required": [
                "metadata",
                "logo",
                "releases"
            ],
            "title": "AiiDAlab apps registry app entry"
        },
        "Apps": {
            "type": "object",
            "additionalProperties": false,
            "patternProperties": {
                ".*": {
                    "$ref": "#/definitions/App"
                }
            },
            "propertyNames": {
                "pattern": "^[A-Za-z][A-Za-z0-9-_]*$"
            },
            "title": "Schema for the AiiDAlab apps registry."
        },
        "ReleaseSpecification": {
            "type": "object",
            "properties": {
                "environment": {
                    "$ref": "environment.schema.json#definitions/Environment"
                },
                "url": {
                    "$ref": "#definitions/ReleaseSpecificationUrl"
                },
                "version": {
                    "type": "string"
                }
            },
            "additionalProperties": false,
            "required": [
                "url"
            ]
        },
        "ReleaseSpecificationUrl": {
            "type": "string",
            "format": "uri"
        },
        "ReleaseSpecifications": {
            "type": "array",
            "items": {
                "oneOf": [
                    {
                        "$ref": "#definitions/ReleaseSpecification"
                    },
                    {
                        "$ref": "#definitions/ReleaseSpecificationUrl"
                    }
                ]
            }
        }
    }
}
