{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://aiidalab.github.io/aiidalab-registry/schemas/v2/metadata.schema.json",
    "$ref": "#/definitions/Welcome",
    "definitions": {
        "Welcome": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "title": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "authors": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                },
                "logo": {
                    "type": "string"
                },
                "state": {
                  "type": "string",
                  "enum": ["registered", "development", "stable"]
                },
                "documentation_url": {
                  "type": "string",
                  "format": "uri"
                },
                "external_url": {
                  "type": "string",
                  "format": "uri"
                },
                "git_url": {
                  "type": "string",
                  "format": "uri"
                },
                "requires": {
                  "type": "object",
                  "patternProperties": {
                    ".*": {"$oneOf": [
                        {"$ref": "#/definitions/Dependencies"},
                        {"$ref": "#/definitions/Requirements"}
                      ]
                    }
                  }
                }
            },
            "required": [
                "description",
                "title"
            ],
            "title": "Welcome"
        },
        "Dependencies": {
          "type": "object",
          "properties": {
            "jupyter-requirements": {
              "$ref": "#/definitions/Requirements"},
            "python-requirements": {
              "$ref": "#/definitions/Requirements"}
          }
        },
        "Requirements": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "title": "Requirements"
        }
    }
}
