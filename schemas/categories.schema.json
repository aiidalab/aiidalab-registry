{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://aiidalab.github.io/aiidalab-registry/schemas/v2/categories.schema.json",
    "$ref": "#/definitions/Categories",
    "definitions": {
        "Categories": {
            "type": "object",
            "additionalProperties": false,
            "patternProperties": {
              "^[a-z][a-z0-9-_]*$": {"$ref": "#/definitions/Category"}
            },
            "title": "JSON-schema for the AiiDAlab app store categories registry."
        },
        "Category": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "title": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                }
            },
            "required": [
                "description",
                "title"
            ],
            "title": "Category"
        }
    }
}
